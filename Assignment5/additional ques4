#include <stdio.h>
#include <stdlib.h>

int cmpInc(const void* a, const void* b) {
    return *(int*)a - *(int*)b;
}

int cmpDec(const void* a, const void* b) {
    return *(int*)b - *(int*)a;
}

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for (int i = 0; i < n; i++) scanf("%d", &arr[i]);

    int even[n], odd[n];
    int e = 0, o = 0;

    for (int i = 0; i < n; i++) {
        if (i % 2 == 0) even[e++] = arr[i];
        else odd[o++] = arr[i];
    }

    qsort(even, e, sizeof(int), cmpInc);
    qsort(odd, o, sizeof(int), cmpDec);

    for (int i = 0; i < e; i++) printf("%d ", even[i]);
    for (int i = 0; i < o; i++) printf("%d ", odd[i]);

    return 0;
}
